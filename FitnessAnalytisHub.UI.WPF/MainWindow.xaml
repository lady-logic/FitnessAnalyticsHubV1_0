<Window
    x:Class="FitnessAnalytisHub.UI.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:FitnessAnalytisHub.UI.WPF.ViewModels"
    xmlns:views="clr-namespace:FitnessAnalytisHub.UI.WPF.Views"
    Title="Fitness Analytics Hub"
    Width="900"
    Height="600"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:StravaAuthViewModel}">
            <views:StravaAuthView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ActivitiesViewModel}">
            <views:ActivitiesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AthleteProfileViewModel}">
            <views:AthleteProfileView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Navigation menu  -->
        <StackPanel
            Grid.Row="0"
            Background="#2D2D30"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding NavigateToAuthCommand}"
                Content="Strava Authentifizierung"
                Foreground="White" />
            <Button
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding NavigateToActivitiesCommand}"
                Content="Aktivitäten"
                Foreground="White" />
            <Button
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding NavigateToProfileCommand}"
                Content="Athletenprofil"
                Foreground="White" />
        </StackPanel>

        <!--  Main content area  -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />

        <!--  Status bar  -->
        <StatusBar Grid.Row="2" Background="#007ACC">
            <StatusBarItem>
                <TextBlock Foreground="White" Text="Fitness Analytics Hub" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Foreground="White" Text="{Binding CurrentViewModel.StatusMessage}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
