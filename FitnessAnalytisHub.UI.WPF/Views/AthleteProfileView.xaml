<UserControl
    x:Class="FitnessAnalytisHub.UI.WPF.Views.AthleteProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessAnalytisHub.UI.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Athletenprofil" />

        <!--  Athlete list  -->
        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Athleten" />

            <ListBox
                Grid.Row="1"
                DisplayMemberPath="FirstName"
                ItemsSource="{Binding Athletes}"
                SelectedItem="{Binding SelectedAthlete}"
                SelectionChanged="ListBox_SelectionChanged" />
        </Grid>

        <!--  Athlete details  -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Profildetails" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,5"
                Text="Vorname:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding FirstName}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,5"
                Text="Nachname:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding LastName}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,5"
                Text="E-Mail:" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding Email}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,5"
                Text="Stadt:" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding City}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,5"
                Text="Land:" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding Country}" />

            <Button
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0"
                Padding="10,5"
                HorizontalAlignment="Left"
                Command="{Binding SaveAthleteCommand}"
                Content="Speichern" />
        </Grid>

        <!--  Error message  -->
        <TextBlock
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />
    </Grid>
</UserControl>