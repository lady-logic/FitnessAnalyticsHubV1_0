<UserControl
    x:Class="FitnessAnalyticsHub.UI.WPF.Views.ActivitiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:FitnessAnalyticsHub.UI.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FitnessAnalyticsHub.UI.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="Bold"
            Text="Aktivitäten" />

        <!--  Athlete selection  -->
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Athlet: " />
            <ComboBox
                Width="200"
                Margin="10,0,0,0"
                DisplayMemberPath="FirstName"
                ItemsSource="{Binding Athletes}"
                SelectedItem="{Binding SelectedAthlete}" />
            <Button
                Margin="10,0,0,0"
                Command="{Binding LoadAthletesCommand}"
                Content="Aktualisieren" />
        </StackPanel>

        <!--  Activities list  -->
        <DataGrid
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,0"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            ItemsSource="{Binding Activities}"
            SelectedItem="{Binding SelectedActivity}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding StartDateLocal, StringFormat={}{0:dd.MM.yyyy}}"
                    Header="Datum" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding SportType}"
                    Header="Typ" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Distance, StringFormat={}{0:F1} km}"
                    Header="Distanz (km)" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding MovingTime, StringFormat={}{0:hh\\:mm\\:ss}}"
                    Header="Zeit" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Statistics panel  -->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="Statistiken" />

            <StackPanel
                Grid.Row="1"
                Margin="0,5"
                Orientation="Horizontal">
                <TextBlock Text="Aktivitäten gesamt: " />
                <TextBlock Text="{Binding Statistics.TotalActivities}" />
            </StackPanel>

            <StackPanel
                Grid.Row="2"
                Margin="0,5"
                Orientation="Horizontal">
                <TextBlock Text="Gesamtdistanz: " />
                <TextBlock Text="{Binding Statistics.TotalDistance, StringFormat={}{0:F1} km}" />
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                Margin="0,5"
                Orientation="Horizontal">
                <TextBlock Text="Gesamtzeit: " />
                <TextBlock Text="{Binding Statistics.TotalDuration, StringFormat={}{0:d\\.hh\\:mm}}" />
            </StackPanel>

            <StackPanel
                Grid.Row="4"
                Margin="0,5"
                Orientation="Horizontal">
                <TextBlock Text="Höhenmeter gesamt: " />
                <TextBlock Text="{Binding Statistics.TotalElevationGain, StringFormat={}{0:F0} m}" />
            </StackPanel>
        </Grid>

        <!--  Error message  -->
        <TextBlock
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}" />
    </Grid>
</UserControl>
